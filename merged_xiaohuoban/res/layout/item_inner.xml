<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_inner_bg_selector"
    android:orientation="vertical" >

    <View
        android:id="@+id/divider_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <RelativeLayout
        android:id="@+id/rl_inner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" >

        <ImageView
            android:id="@+id/arrow_inner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:visibility="visible"
            android:background="@drawable/chevron_inverse" />

        <RelativeLayout
            android:id="@+id/image_inner_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:padding="2dp" >

            <com.iiseeuu.asyncimage.widget.AsyncImageView
                android:id="@+id/image_inner"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:visibility="visible"
                android:background="@drawable/abs__spinner_48_inner_holo" 
                android:src="@drawable/abs__spinner_48_inner_holo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/arrow_inner"
            android:layout_toRightOf="@+id/image_inner_lay"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_inner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="2dp"
                android:text="鸡"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/description_inner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:maxLines="5"
                android:paddingLeft="2dp"
                android:text="我就是一只傻鸡"
                android:textColor="#555"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>